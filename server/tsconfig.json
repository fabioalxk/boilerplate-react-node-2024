{
  "compilerOptions": {
    "outDir": "./dist", // Gera arquivos na pasta dist
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos TS no src
  "exclude": ["node_modules"]
}
